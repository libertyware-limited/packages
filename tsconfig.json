{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2016",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "packages/**/*",
        "integration/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}